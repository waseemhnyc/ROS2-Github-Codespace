{
    "name": "ROS 2 Humble Environment",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "./"
    },
    "forwardPorts": [6080],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "overrideCommand": false,
    "postCreateCommand": "/usr/local/bin/check-vnc.sh",
    "postStartCommand": "/usr/local/bin/check-vnc.sh",
    "postAttachCommand": "echo 'VNC service available at http://localhost:6080/'"
}

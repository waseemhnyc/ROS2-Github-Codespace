{
    "name": "ROS 2 Humble Environment",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "./"
    },
    "forwardPorts": [6080],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "initializeCommand": "echo 'Preparing to build container...'",
    "onCreateCommand": "echo 'Container created, setting up...'",
    "updateContentCommand": "echo 'Content updated...'",
    "postCreateCommand": "./.devcontainer/startup.sh",
    "postStartCommand": "pgrep -f Xvfb || ./.devcontainer/startup.sh",
    "postAttachCommand": "echo 'VNC service should be running at http://localhost:6080/'"
}
